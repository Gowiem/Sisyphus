<div class="modal fade" {{bind-attr id="disputeModalId"}} tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 class="modal-title">Dispute Subtask</h3>
      </div>
      <div class="modal-body">
        
        {{! Info Section }}
        <div class="dispute-info">
          <p class="dispute-helper-text">Task:</p>
          <div class="task-description">
          <p>{{title}}</p>
          <div class="assigned-to-members assigned-to user-tags-container"><strong>Assigned to:</strong>
            {{#each student in students}}
                {{render "userSelect" student}}
            {{/each}}
          </div>
        </div>

        {{! Reason Section }}
        <div class="dispute-reason">
          <p class="dispute-helper-text">Reason for disputing:</p>
          {{textarea valueBinding="disputeReason" cols="73" rows="6" placeholder="Give constructive feedback on how this task can be improved."}}
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" {{bind-attr class=":btn :btn-primary :btn-block :btn-sm hasEnteredReason::disabled"}}
          {{action submitDisputed}}>Submit</button>
        <a data-dismiss="modal" class="btn btn-sm btn-transparent">Cancel</a>
      </div>
    </div>
  </div>
</div>