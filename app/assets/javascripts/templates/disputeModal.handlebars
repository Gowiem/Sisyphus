<div class="modal fade" {{bind-attr id="disputeModalId"}} tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 class="modal-title">Dispute Subtask</h3>
      </div>
      <div class="modal-body">
        
        {{! Info Section }}
        <div class="dispute-info">
          <p><strong>Task:</strong></p>
          <p>{{title}}</p>
          <p><strong>Assigned to:</strong></p>
          <ul class="assigned-to">
            {{#each student in students}}
              <li>
                {{student.fullName}}
              </li>
            {{/each}}
          </ul>
        </div>

        {{! Reason Section }}
        <div class="dispute-reason">
          <p>Reason for Disputing</p>
          {{textarea valueBinding="disputeReason" cols="73" rows="6" placeholder="Give constructive feedback on how this task can be improved."}}
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" {{bind-attr class=":btn :btn-primary :btn-block :btn-sm hasEnteredReason::deactivated"}} 
          {{action submitDisputed}}>Submit</button>
        <a data-dismiss="modal" class="btn btn-sm btn-transparent">Cancel</a>
      </div>
    </div>
  </div>
</div>