<div class="edit subtask-container">
	<form role="form" class="form-horizontal">
	  {{partial "subtaskPartial"}}
	  <div class="col-lg-12">
	    <button {{action saveSubtask}} 
	            type="button" 
	            {{bind-attr class="userCanSave::disabled :btn :btn-primary :btn-block :btn-sm"}}>Save</button>
	    <button {{action cancelEdit}} type="button" class="btn btn-sm btn-transparent">Cancel</button>
	    <button {{action deleteSubtask}} type="button" class="btn btn-sm btn-transparent pull-right"><i class="fa fa-trash-o"></i> Delete</button>
	  </div>
	</form>
</div>
