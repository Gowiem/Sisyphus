
{{#if hasPickedAUserType}}
<h2>Create an Account</h2>
<form class="form-horizontal user-form" role="form">
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      {{view Ember.TextField valueBinding='email' name='email' placeholder='Email'}}
      <span class="help-inline">
      {{errors.email}}
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      {{view Ember.TextField type="password" valueBinding='password' placeholder='Password'}}
      <span class="help-inline">
        {{errors.password}}
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Confirm Password</label>
    <div class="col-sm-10">
      {{view Ember.TextField type="password" valueBinding='passwordConfirmation' placeholder='Password Confirmation'}}
      <span class="help-inline">
        {{errors.passwordConfirmation}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <a href='#' {{action cancel}} class='btn'>Cancel</a>
      <button type="submit" {{action register}} class='btn btn-large btn-primary'>Sign Up</button>
    </div>
  </div>
</form>
{{else}}
  <h2>Please pick a user type</h2>
  <button {{action pickStudentType}}>Student</button>
  <button {{action pickTeacherType}}>Teacher</button>
{{/if}}