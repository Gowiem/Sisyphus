<div class="panel panel-default">
  <div class="panel-body">
    <div class="required-task-container clearfix">
      <div class="col-md-10"> 
        <h3 class="pull-left">{{title}}</h3>
      </div>
      <div class="date-container clearfix">
        <p {{bind-attr class="isDueSoonish:due-soon :center-block"}}>{{readableDate}}</p>
      </div>
	<hr>
    </div>
    <ul>
      {{#each task in uncompletedSubtasks}}
        {{render "subtask" task}}
      {{/each}}
      {{#each task in completedLimboSubtasks}}
        {{render "subtask" task}}
      {{/each}}
      {{#if showingCompleted}}
        {{#each task in completedSubtasks}}
          {{render "subtask" task}}
        {{/each}}
      {{/if}}
    </ul>
    {{#if addingNewTask}}
      {{render "newSubtask" newSubtask}}
    {{/if}}
    <a {{bind-attr class="addingNewTask:hide :add-subtask-link :add-task"}} 
      {{action showNewTask}}>
      <i class="fa fa-plus"></i>
      Add task
    </a>
    <div class="completed-container">
      {{#if shouldShowCompletedLink}}
        <p class="completed-action view-completed-tasks">
          <a {{action showCompleted}}>
            View completed tasks ({{completedCount}})
          </a>
        </p>
      {{/if}}
      {{#if showingCompleted}}
        <p class="completed-action view-completed-tasks">
          <a {{action hideCompleted}}>
            Hide completed tasks
          </a>
        </p>
      {{/if}}
    </div>
  </div>
</div>
